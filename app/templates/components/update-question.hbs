{{#if updateQuestionForm}}
  <h4>Update</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="inquiry">Question</label>
          {{textarea value=inquiry id="inquiry" placeholder=question.inquiry}}
        </div>

        <div class="form-group">
          <label for="note">Notes</label>
          {{textarea value=note id="note" placeholder=question.note}}
        </div>
        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
